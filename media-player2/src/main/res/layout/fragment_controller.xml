<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/player_control_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="#e0000000"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="5dp">

    <ImageView
        android:id="@+id/play_pause_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/baseline_pause_circle_outline_white_36"
        android:contentDescription="@null" />

    <LinearLayout
        android:id="@+id/seekbar_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center">

        <TextView
            android:id="@+id/video_playtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/video_player_time_format"
            android:textColor="#aaffffff"
            android:textSize="12sp" />

        <SeekBar
            android:id="@+id/seekbar"
            style="@style/Widget.SeekBar.VideoPlayer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/video_durationtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/video_player_time_format"
            android:textColor="#aaffffff"
            android:textSize="12sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/open_close_fullscreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:background="@drawable/fullscreen"
        android:contentDescription="@null" />

    <ImageView
        android:id="@+id/show_flotingview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:src="@drawable/show_small_window" />

</LinearLayout>
