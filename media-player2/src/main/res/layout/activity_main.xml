<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cn.woodyjc.media.video.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="mediaplayer"
            android:onClick="internal"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ijkplayer"
            android:onClick="ijkplay"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="vlcplayer"
            android:onClick="vlcplay"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="all player"
            android:onClick="allplay"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
