<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style
        name="Widget.SeekBar.VideoPlayer"
        parent="@android:style/Widget.SeekBar">
        <item name="android:progressDrawable">@drawable/video_player_seekbar_bg</item>
        <item name="android:thumb">@drawable/video_player_seekbar_thumb</item>
        <item name="android:thumbOffset">0dp</item>
        <item name="android:maxHeight">4dp</item>
        <item name="android:minHeight">4dp</item>
        <!--<item name="android:paddingLeft">16dp</item>-->
        <!--<item name="android:paddingRight">16dp</item>-->
    </style>


    <style name="leftSideDialogAnim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/left_side_in</item>
        <item name="android:windowExitAnimation">@anim/left_side_out</item>
    </style>

    <style name="bottomSideDialogAnim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/bottom_side_in</item>
        <item name="android:windowExitAnimation">@anim/bottom_side_out</item>
    </style>
</resources>
